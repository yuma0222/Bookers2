<body>
  <% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
  <% end %>
  <div class="body">
    <div class="container">
      <p id="notice"></p>
      <div class="row">
        <div class="col-xs-3">


         <%= render 'books/list', books: @books %>


         <div class="col-xs-9">
          <h2>Books</h2>

          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
                <td><%= book.title %><br /></td>
                <td><%= book.body %></td>
                <td></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>


</body></html>